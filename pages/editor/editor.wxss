/*** 顶部工具栏部分开始 ***/
/* 顶部工具栏框开始 */
#toolsbar{
  position: fixed;
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  border-top: 1rpx solid #eee;
  box-shadow: 0 0 10rpx 0 #aaa;
  background-color: white;
}
/* 更多-按钮 */
#more-option{
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
  background: url(data:image/gif;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgCAYAAABzenr0AAAAcklEQVRYR+2U0QmAQAxD0yUcwmWOgrjkfZQu4xAuUf/l8OsgiukAbXhJYyCPke9DAkRgSKC1tprZMjOgVXVm5nHfORTg7h3ANlMAgB4R+zcE0C2YjP5xnd7wnQToIVQP0C1QD4gAPYTqAboF+gIR+BWBC+s6TiGDOwRgAAAAAElFTkSuQmCC) no-repeat center;
  background-size: cover;
}

/** 切换显示模式开始 **/
.markview, .editorview{
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
  background-size: cover;
}
/* 显示markdown显示区域按钮开始 */
.markview{
  background: url(data:image/gif;base64,) no-repeat center;
}
/* 显示编辑区域按钮 */
.editorview{
  background: url(data:image/gif;base64,) no-repeat center;
}
/** 切换显示模式结束 **/
/*** 顶部工具栏部分结束 ***/

/** 编辑和显示区域部分开始 **/
#editorarea, #viewarea{
  padding: 121rpx 60rpx 40rpx;
  height: calc(100vh - 161rpx);
  overflow: hidden;
}
/* 编辑区域 */
#textarea{
  width: 100%;
  height: 100%;
  background-color: rgb(250, 250, 250);
  overflow-x: scroll;
}
/* markdown显示区域 */
#viewarea{
  height: 100% !important;
}
/** 编辑和显示区域部分结束 **/
