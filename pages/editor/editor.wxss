#toolsbar{
  position: fixed;
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  border-top: 1rpx solid #eee;
  box-shadow: 0 0 10rpx 0 #aaa;
}

#more-option{
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -25rpx;
  width: 50rpx;
  height: 50rpx;
   background: url(data:image/gif;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgCAYAAABzenr0AAAAcklEQVRYR+2U0QmAQAxD0yUcwmWOgrjkfZQu4xAuUf/l8OsgiukAbXhJYyCPke9DAkRgSKC1tprZMjOgVXVm5nHfORTg7h3ANlMAgB4R+zcE0C2YjP5xnd7wnQToIVQP0C1QD4gAPYTqAboF+gIR+BWBC+s6TiGDOwRgAAAAAElFTkSuQmCC) no-repeat center;
  background-size: cover;
}

#change-model{
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -25rpx;
  width: 50rpx;
  height: 50rpx;
  background: url(data:image/gif;base64,) no-repeat center;
  background-size: cover;
}

#editorarea, #viewarea{
  padding: 121rpx 60rpx 40rpx;
  height: calc(100vh - 161rpx);
  overflow: hidden;
}

#textarea{
  width: 100%;
  height: 100%;
  background-color: #efefef;
}


/** 仿html样式部分开始 **/

.h1-view, h2-view, .h3-view, .h4-view, .h5-view, .h6-view{
  overflow: hidden;
}
.h1, .h2, .h3, .h4, .h5, .h6{
  display: block;
  font-weight: bold;
}

.h1{
  margin: 26rpx 0;
  font-size: 76rpx;
}

.h2{
  margin: 32rpx 0;
  font-size: 57rpx;
}

.h3{
  margin: 38rpx 0;
  font-size: 44.46rpx;
}

.h4{
  margin: 35rpx 0;
  font-size: 38rpx;
}

.h5{
  margin: 40rpx 0;
  font-size: 31.54rpx;
}

.h6{
  margin: 50rpx 0;
  font-size: 25.46rpx;
}

.p{
  margin: 38rpx 0;
  font-size: 38rpx;
}

/** 仿html样式部分结束 **/