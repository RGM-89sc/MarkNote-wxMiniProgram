/**index.wxss**/

.login{
  margin: 10% auto;
  width: 80%;
  text-align: center;
}

/** 用户信息部分开始 **/
 .userinfo {
  position: fixed;
  width: 100%;
  height: 80rpx;
   text-align: center; 
  border-top: 1rpx solid #eee;
  box-shadow: 0 0 10rpx 0 #aaa;
  background-color: white;
} 
/* 用户头像 */
 .userinfo-avatar {
  display: inline-block;
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
/* “我的便笺”标题 */
.top-title{
  font-size: 42rpx;
   line-height: 80rpx;
}
/* 添加便笺按钮 */
.add{
  display: inline-block;
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
  background: url(data:image/gif;base64,) no-repeat center;
  background-size: cover;
}
/* 便笺区域 */
.notes-list{
  margin-top: 80rpx;
}
/* 遮罩 */
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.5;
}
/* 添加便笺的面板 */
.add-panel{
  position: fixed;
  top: 15%; 
  left: calc(10% - 20rpx);
  padding: 20rpx;
  width: 80%;
  height: 360rpx;
  background-color: white;
  border-radius: 20rpx;
  z-index: 100;
}
/** 用户信息部分结束 **/

/** 我的文章部分开始 **/
/* 便笺 */
 .note{
  margin: 35rpx;
  padding: 20rpx 20rpx;
  min-height: 120rpx;
  background-color: white;
  box-shadow: 4px 4px 10rpx 0 #eee;
} 
/* 便笺的文章标题 */
 .note-title{
  font-size: 40rpx;
  line-height: 60rpx;
} 
/* 便笺的文章创建时间 */
 .note-date{
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #aaa;
  clear: both;
} 

