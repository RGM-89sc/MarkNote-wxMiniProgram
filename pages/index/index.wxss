/** 我的便笺部分结束 **/

/** 新建便笺部分开始 **/
/* 新建便笺中的label */
 .new-title{
  display: inline-block;
  padding: 20rpx 0 0 10rpx;
} 
/* 标题的输入框 */
 .new-title-input{
  position: relative;
  margin-top: 20rpx;
  padding: 10rpx 80rpx 10rpx 10rpx;
  border-bottom: 1rpx solid #ddd;
} 
/* 输入标题剩下的可用字数 */
 .len{
  position: absolute;
  bottom: 5rpx;
  right: 30rpx;
  font-size: 30rpx;
  color: #ddd;
} 
/* 按钮 */
 .new{
  display: inline-block;
  margin: 70rpx 5% 0;
  width: 40%;
} 
/* 没有便笺时的文字的容器 */
 .no-note{
  margin-top: 20%;
  text-align: center;
} 
/* 没有便笺时的文字 */
.no-note-text{
  color: #aaa;
  font-size: 35rpx;
}
/** 新建便笺部分结束 **/
