/* pages/mymsg/mymsg.wxss */
.bg{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgb(248, 248, 248);
}
.msg-panel{
  margin: 0 auto;
  width: calc(100% - 60rpx);
  background-color: white;
  border-radius: 10rpx;
}
.userinfo{
  text-align: center;
}

.userinfo-avatar{
  display: block;
  margin: 100rpx auto 35rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.userinfo-nickname{
  color: #777;
}

.notes-msg-panel{
  margin: 50rpx auto;
  width: 50%;
  text-align: center;
  border-left: 1rpx solid #95d0de;
  border-right: 1rpx solid #95d0de;
}

.notes-total-title{
  display: block;
  color: #95d0de;
  font-size: 45rpx;
}

.notes-total{
  display: block;
  color: #95d0de;
  font-size: 65rpx;
  line-height: 100rpx;
}

.menu{
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.about-on, .about-off{
  padding: 20rpx;
  border-radius: 10rpx;
}

.about-on{
  background: white url(data:image/gif;base64,) no-repeat;
  background-position: 97% 20rpx;
}

.about-off{
  background: white url(data:image/gif;base64,) no-repeat;
  background-position: 97% 20rpx;
}

.about-title{
  color: #777;
  font-size: 40rpx;
}

.about-context{
  padding: 30rpx 0;
  font-size: 35rpx;
  color: #aaa;
}

.bg_gray{
  background-color: rgb(240, 240, 240);
}